<import src ="/template/form.wxml"/>
<view class="cu-bar bg-white solid-bottom  margin-top">
  <view class="action">
    <text class="cuIcon-titles text-orange"></text> 输入复查结果
  </view>
</view>

<template is="formData" data="{{information,compare}}"/>
<view class="cu-form-group align-start">
  <view class="title">其他</view>
  <textarea placeholder="请输入其他内容" value="{{information.other}}" bindblur="otherChange"></textarea>
</view>
<view class="padding flex align-center bg-white safe-bottom">
  <button class="cu-btn line-grey lg flex-sub margin" bindtap="draft">存草稿</button>
  <button class="cu-btn bg-blue lg flex-sub margin" bindtap="submit">保存</button>
</view>

<view class="cu-modal bottom-modal {{delStatus?'show':''}}">
  <view class="cu-dialog">
    <view class="cu-bar bg-white">
      <view class="action text-grey" bindtap="delModal">取消</view>
      <view class="action text-blue" bindtap="yes">确定</view>
    </view>
    <view class="padding-xl">
      确认删除此图片吗?
    </view>
  </view>
</view>