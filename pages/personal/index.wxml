
<include src ="/template/error.wxml"/>
<include src ="/template/tmplModal.wxml"/>
<view class="flex text-center bg-white">
  
  <navigator url="/pages/news/list" class="flex-sub padding solids-right">
    知识科普
  </navigator>

  <navigator url="/pages/personal/info" class="flex-sub padding">
    我的病历
  </navigator>
</view>

<view class="cu-card dynamic no-card margin-top">
  <view class="cu-list menu-avatar">
    <navigator url="/pages/personal/info" class="cu-item" bindtap="userInfo">
      <view class="avatar round">
        <open-data type='userAvatarUrl' ></open-data>
      </view>
      <view class="content">
        <view class="padding-left">
          <open-data type="userNickName"></open-data>          
        </view>        
      </view>
      <view class="action">
        <view class="cuIcon-right text-gray lg"></view>        
      </view>
    </navigator>    
  </view>
</view>



<view class="cu-bar bg-white solid-bottom margin-top">
  <view class="action">
    <text class="cuIcon-title text-orange "></text>下次复查时间
  </view>
</view>
<view class="cu-list menu menuCard">
  <navigator class="cu-item arrow" url="/pages/personal/review/form?id={{near.id}}" wx:if="{{near}}">
    <view class="content">
      <text class="cuIcon-time text-grey"></text>
      <text class="text-grey">{{near.reviewTime}}</text>
    </view>
  </navigator>

  <view class="cu-item" wx:else>
    <view class="content">
      <text class="cuIcon-info text-red"></text>
      <text class="text-red">您暂无下次检查的复查计划,请等待医生进行添加</text>
    </view>
  </view>

</view>
<block wx:if="{{reply}}">
  <view class="cu-bar bg-white solid-bottom margin-top">
    <view class="action">
      <text class="cuIcon-title text-orange "></text>医生答复
    </view>
  </view>
  <view class="cu-list menu">
    <view class="cu-item">
      <view class="content padding-bottom-xl padding-top-xl">
        <text class="text-black">{{reply.reply}}</text>
      </view>
    </view>
  </view>
</block>

<view class="padding flex flex-direction bg-white safe-bottom">
  <navigator url="/pages/personal/review/plan" class="cu-btn bg-blue lg">查看复查计划</navigator>
</view>