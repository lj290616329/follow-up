<include src ="/template/error.wxml"/>
<navigator url="/pages/news/detail?id={{item.id}}" wx:for-key="index" class="cu-card article no-card  solid-bottom"  wx:for="{{lists}}">
  <view class="cu-item shadow">
    <view class="title"><view class="text-cut">{{item.title}}</view></view>
    <view class="content">
      <image src="{{item.pic}}"
        mode="aspectFill"></image>
      <view class="desc">
        <view class="text-content"> {{item.des}}</view>
        <view>
          <view class="cu-tag bg-red light sm round" wx:for="{{item.tags}}" wx:for-item="tag" wx:for-key="tag">{{tag}}</view>            
        </view>
      </view>
    </view>
  </view>
</navigator>
